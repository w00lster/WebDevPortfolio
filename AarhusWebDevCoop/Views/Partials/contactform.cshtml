@model AarhusWebDevCoop.ViewModels.ContactForm

@{  
        Layout = null;
        
}
@using (Html.BeginUmbracoForm("HandleSubmitForm", "ContactFormSurface", new{ @class = "form-horizontal"})) {

    if(TempData["success"] == null){
   <div class="form-group">
       @Html.LabelFor(x=> x.Name, new { @class ="col-sm-2 control label" })
       <div class="col-sm-6">
       @Html.EditorFor(x => x.Name)
       @Html.ValidationMessageFor(x=> x.Name)
       </div>
    </div>
    
   <div class="form-group">
       @Html.LabelFor(x=> x.Email, new { @class ="col-sm-2 control label" })
      <div class="col-sm-6">
       @Html.EditorFor(x => x.Email)
       @Html.ValidationMessageFor(x=> x.Email)
      </div>
    </div>
    
    <div class ="form-group">
       @Html.LabelFor(x=> x.Subject, new { @class ="col-sm-2 control label" })
       <div class="col-sm-6">
       @Html.EditorFor(x => x.Subject)
       @Html.ValidationMessageFor(x=> x.Subject)
        </div>
    </div>
    
    <div class ="form-group">
       @Html.LabelFor(x=> x.Message, new { @class ="col-sm-2 control label" })
        <div class="col-sm-6">
       @Html.EditorFor(x => x.Message)
       @Html.ValidationMessageFor(x=> x.Message)
        </div>
    </div>
    <div class ="form-group">
      <input type="submit"/>
      </div>
      }
      else{
      <p>Thank you for contacting us. We’ll be in touch soon!</p>
      }

}